{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "incremental": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "dist",
    "paths": {
      "@clutch-sh/*": ["api/*", "packages/*/src", "workflows/*/src"],
    },
    "preserveConstEnums": true,
    "target": "ES2018",
    "types": ["jest", "node", "long"],
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "**/*.stories.ts*",
    "**/*.stories.js*",
    "**/*.test.js*",
    "**/*.test.ts*",
    "**/dist/*"
  ],
}
